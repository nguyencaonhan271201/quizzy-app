<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#232526"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lnloAddComment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#232526"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#414345">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/lnloPostInfo"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="5dp"
                        android:orientation="horizontal">
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardCornerRadius="25dp"
                            app:cardBackgroundColor="@android:color/transparent"
                            app:cardElevation="0dp">

                            <com.example.quizzyapplication_v2.SquareImageView
                                android:id="@+id/imgCommentPostAva"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/ic_launcher" />
                        </androidx.cardview.widget.CardView>
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:text="Username"
                                android:id="@+id/txtCommentPostUsername"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/nexa_bold"
                                android:textSize="17sp"
                                android:gravity="center_horizontal|center_vertical"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/colorAccent"
                                android:text="Topic"
                                android:id="@+id/txtCommentPostTopic"
                                android:layout_alignParentLeft="true"
                                android:fontFamily="@font/nexa_bold"
                                android:textSize="15sp"
                                android:gravity="center_horizontal|center_vertical"/>
                        </LinearLayout>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lnloPostInfo"
                        android:layout_margin="5dp"
                        android:text="Feed Content"
                        android:singleLine="false"
                        android:textColor="@color/colorAccent"
                        android:textSize="15dp"
                        android:id="@+id/txtCommentPostContent">
                    </TextView>
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgCommentPost"
                        android:src="@drawable/lazy_loading"
                        android:adjustViewBounds="true"
                        ></ImageView>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/lnloPostInfo"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="xx lượt thích"
                            android:singleLine="false"
                            android:textColor="@color/colorAccent"
                            android:textSize="14dp"
                            android:layout_alignParentLeft="true"
                            android:id="@+id/txtCommentPostLikeCount">
                        </TextView>
                    </RelativeLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:singleLine="false"
                        android:layout_marginLeft="5dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/colorAccent"
                        android:textSize="10dp"
                        android:id="@+id/txtCommentPostTime"
                        android:layout_marginBottom ="5dp">
                    </TextView>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lnloComments"
                android:background="#232526"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/lnloAddComment"
        android:orientation="horizontal">
        <EditText
            android:layout_width="0dp"
            android:layout_weight="10"
            android:layout_height="wrap_content"
            android:id="@+id/txtAddComment"
            android:hint="@string/addComment"
            android:inputType="textLongMessage"
            android:textColor="@color/colorAccent"
            android:textColorHint="@color/colorAccent"
            android:textSize="16sp"/>
        <com.example.quizzyapplication_v2.SquareImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitXY"
            android:src="@drawable/send"
            android:id="@+id/btnAddComment"
            android:layout_gravity="center">
        </com.example.quizzyapplication_v2.SquareImageView>
    </LinearLayout>
</RelativeLayout>