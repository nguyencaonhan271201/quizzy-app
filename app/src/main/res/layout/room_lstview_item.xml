<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:background="#232526">
    <TextView
        android:id="@+id/room_lstview_ID"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:fontFamily="@font/nexa_bold"
        android:gravity="center_vertical|center_horizontal"
        android:layout_margin="5dp"
        android:text="1"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        android:textStyle="bold"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:layout_weight="6"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/room_lstview_numberOfQuest"
            android:layout_below="@id/topicImageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:fontFamily="@font/nexa_book"
            android:text="Số câu hỏi: "
            android:textColor="@color/colorAccent"
            android:textSize="18sp"/>
        <TextView
            android:id="@+id/room_lstview_player1"
            android:layout_below="@id/topicImageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/nexa_book"
            android:layout_gravity="center"
            android:text="Người chơi 1: "
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:singleLine="false"/>
        <TextView
            android:id="@+id/room_lstview_level1"
            android:layout_below="@id/topicImageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_gravity="center"
            android:fontFamily="@font/nexa_book"
            android:text="Cấp độ: "
            android:textColor="@color/colorAccent"
            android:textSize="18sp"/>
    </LinearLayout>

</LinearLayout>