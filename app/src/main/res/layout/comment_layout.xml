<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#414345"
    android:layout_marginBottom="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#414345">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_weight="2">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="25dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardElevation="0dp">

                <com.example.quizzyapplication_v2.SquareImageView
                    android:id="@+id/imgComment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="10"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:text="Username"
                android:id="@+id/txtCommentUsername"
                android:layout_alignParentLeft="true"
                android:fontFamily="@font/nexa_bold"
                android:textSize="17sp"
                android:gravity="center_horizontal|center_vertical"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Comment Content"
                android:singleLine="false"
                android:textColor="@color/colorAccent"
                android:textSize="16dp"
                android:id="@+id/txtCommentContent">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 ngày trước"
                    android:singleLine="false"
                    android:textSize="13dp"
                    android:alpha="0.75"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/colorAccent"
                    android:id="@+id/txtCommentTime">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="xx lượt thích"
                    android:singleLine="false"
                    android:textColor="@color/colorAccent"
                    android:alpha="0.75"
                    android:textSize="13dp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/txtCommentLikeCount">
                </TextView>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">
            <com.example.quizzyapplication_v2.SquareImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:scaleType="fitXY"
                android:src="@drawable/not_liked"
                android:id="@+id/btnCommentLike"
                android:layout_gravity="center">
            </com.example.quizzyapplication_v2.SquareImageView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>