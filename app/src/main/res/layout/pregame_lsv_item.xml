<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="#414345">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="15dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardElevation="0dp">

        <com.example.quizzyapplication_v2.SquareImageView
            android:id="@+id/imgPowerIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_margin="5dp"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
        <TextView
            android:id="@+id/power_name"
            android:layout_below="@id/topicImageCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_vertical"
            android:fontFamily="@font/nexa_bold"
            android:text="Power Name"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"/>
        <TextView
            android:id="@+id/power_quantity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/nexa_book"
            android:text="Số lượng: "
            android:textColor="@color/colorAccent"
            android:textSize="14sp"/>
    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/tick"
        android:id="@+id/tickChosen"
        android:visibility="invisible"
        android:layout_gravity="center_vertical"></ImageView>

</LinearLayout>